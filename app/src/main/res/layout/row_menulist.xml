<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlMenuItem"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/m_10dp"
        android:background="@color/white"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/m_170dp"
            android:layout_height="@dimen/m_240dp"
            android:layout_marginRight="@dimen/m_d7"/>


        <TextView
            android:id="@+id/tvMovieTitle"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img"
            android:text="Movie Title"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMovieTitle"
            android:layout_toRightOf="@+id/img"
            android:text="Release Date"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvOverView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvReleaseDate"
            android:layout_marginTop="@dimen/m_20dp"
            android:layout_toRightOf="@+id/img"
            android:text="Movie OverView"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1dp"
            android:layout_below="@+id/tvOverView"
            android:background="@color/clr_gray"
            android:id="@+id/view"
            android:layout_marginTop="@dimen/m_24dp"
            android:layout_toRightOf="@+id/img" />

        <TextView
            android:id="@+id/tvMoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/m_40dp"
            android:layout_toRightOf="@+id/img"
            android:text="More Info"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_5dp"
            android:layout_marginTop="@dimen/m_10dp"
            android:background="@color/clr_gray"
            android:layout_below="@id/tvMoreInfo"/>

    </RelativeLayout>

</LinearLayout>