<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ActMovieDetail">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/screen_m_d18"
        android:paddingLeft="@dimen/screen_m_d18"
        android:paddingRight="@dimen/screen_m_d18"
        android:paddingTop="@dimen/screen_m_d18">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlTop">



    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/m_170dp"
        android:layout_height="@dimen/m_280dp"
        android:layout_marginTop="@dimen/m_10dp"
        android:layout_marginRight="@dimen/m_d7"/>

    <TextView
        android:id="@+id/tvMovieTitle"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_10dp"
        android:layout_toRightOf="@+id/img"
        android:text=""
        android:textSize="@dimen/m_20dp" />

    <TextView
        android:id="@+id/tvOverViewTAG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMovieTitle"
        android:layout_marginTop="@dimen/m_20dp"
        android:layout_toRightOf="@+id/img"
        android:textStyle="bold"
        android:text=""
        android:textSize="14dp" />
    <TextView
        android:id="@+id/tvOverView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOverViewTAG"
        android:layout_marginTop="@dimen/m_10dp"
        android:layout_toRightOf="@+id/img"
        android:text=""
        android:textSize="12dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rlTop"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvOtherDetailsTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_10dp"
        android:text=""
        android:textStyle="bold"
        android:textSize="18dp" />



    <TextView
        android:id="@+id/tvbudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOtherDetailsTag"
        android:layout_marginTop="@dimen/m_10dp"
        android:text=""

        android:textSize="14dp" />
    <TextView
        android:id="@+id/tvHomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvbudget"
        android:layout_marginTop="@dimen/m_10dp"
        android:text=""
        android:textSize="14dp" />
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHomePage"
        android:layout_marginTop="@dimen/m_10dp"
        android:text=""
        android:textSize="14dp" />
    <TextView
        android:id="@+id/tvRuntime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStatus"
        android:layout_marginTop="@dimen/m_10dp"
        android:text=""
        android:textSize="14dp" />
    <TextView
        android:id="@+id/tvTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRuntime"
        android:layout_marginTop="@dimen/m_10dp"
        android:text=""
        android:textSize="14dp" />

    </RelativeLayout>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>